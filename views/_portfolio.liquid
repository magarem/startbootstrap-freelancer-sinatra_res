<!-- Portfolio Grid Section -->
<section id="portfolio">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>{{site.pages.portfolio.label}}</h2>
                <hr class="star-primary">
            </div>
        </div>
        <div class="row">
          {% for item in site.pages.portfolio.items %}
            <div class="col-sm-4 portfolio-item">
                <a href="#portfolioModal{{item.id}}" class="portfolio-link" data-toggle="modal"
                onclick = "$('#img_port_item_id').val({{ forloop.index }});">
                    <div class="caption">
                        <div class="caption-content">
                            <i class="fa fa-search-plus fa-3x"></i>
                        </div>
                    </div>
                    <img id=port_img_mini_{{item.id}} src="{{item.img}}" class="img-responsive" alt="">
                </a>
                
            </div>
          {% endfor %}
        </div>
    </div>
</section>
