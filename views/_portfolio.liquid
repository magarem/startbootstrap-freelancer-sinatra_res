<section id="portfolio" >
   <div class="container">
       <div class="row">
          <div class="col-lg-12 text-center">
              <h2>{{site.pages.portfolio.label}}</h2>
              <hr class="star-primary">                
          </div>
       </div>
       <div class="row">
           <div class="text-center">
                {% if port_cats.size > 1 %}
                  <li class="active_ btn btn-primary" data-filter="all" >Todos</li>
                  {% for t in port_cats %}
                     <li data-filter="{{forloop.index}}" class="btn btn-primary">{{t}}</li>
                  {% endfor %}
                {% endif %}
           </div>
       </div>
       <div class="clearfix"></div>
       <br />
       <style>
          .crop {
            width: 380px;
            height: 240px;
            overflow: hidden;
          }
       </style>
       <div class="row"> 
          <div class="filtr-container gallery gallery2">
               
                  <!-- <div class="col-sm-4 filtr-item  crop" data-category="{{item.cat | indice}}" data-sort="">
                     <a href="#portfolioModal{{item.id}}" class="portfolio-link" data-toggle="modal">               
                      <img id=port_img_mini_{{item.id}} src="{{item.img}}" class="img-responsive centered-and-cropped"  alt="">
                      <span class="item-desc">{{item.titulo}}</span>
                     </a>
                  </div> -->
                  {%raw-%}
                  <div  ng-controller="GalleryCtrl">
                    <div ng-repeat="image in images">
                     <div class="col-sm-4 filtr-item crop"  >
                 
                      <!-- <ul class="gallery gallery2" ng-controller="GalleryCtrl"> -->
                        <!-- <li ng-repeat="image in images"> -->
                          <a ng-click="Lightbox.openModal(images, $index)">
                            <img ng-src="{{image}}" class="img-responsive centered-and-cropped">
                            <span class="item-desc">{{item.titulo}}</span>
                          </a>
                        <!-- </li> -->
                      <!-- </ul> -->
                    </div>
                   </div>
                </div>
             {%endraw-%}
          </div>
        </div>
   
</section>

