<!-- Portfolio Modals -->
{% for item in site.pages.portfolio.items %}
    <div class="portfolio-modal modal fade" id="portfolioModal{{ forloop.index }}" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-content">
            <div class="close-modal" data-dismiss="modal">
                <div class="lr">
                    <div class="rl">
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 col-lg-offset-2">
                        <div class="modal-body">
                            <h2>{{ item.titulo }}</h2>
                            <hr class="star-primary">
                            <img src="{{ item.img }}" class="img-responsive img-centered" alt="">
                            <p>{{ item.txt }}</p>
                            <ul class="list-inline item-details">
                                <li>Cliente:
                                    <strong><a href="http://<%={{ item.site}}%>">{{ item.cliente }}</a>
                                    </strong>
                                </li>
                                <li>Data:
                                    <strong><a href="http://{{ item.site}}">{{ item.data }}</a>
                                    </strong>
                                </li>
                                <li>Servi√ßo:
                                    <strong><a href="http://{{ item.site}}">{{ item.servico }}</a>
                                    </strong>
                                </li>
                            </ul>
                            <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-times"></i> Fechar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{%endfor%}