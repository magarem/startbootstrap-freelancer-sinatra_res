    <![endif]-->
   
  
    <script src="js/jquery.js"></script>
    <!-- AngularJs -->
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.5.3/angular.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.5.3/angular-animate.js"></script>

      <!-- Sortable.js -->
    <script src="http://rubaxa.github.io/Sortable/Sortable.js"></script>

      <!-- ng-sortable.js -->
    <script src="http://rubaxa.github.io/Sortable/ng-sortable.js"></script>

    <!-- Upload -->
    <script src="js/ng-file-upload-shim.min.js"></script>
    <script src="js/ng-file-upload.min.js"></script>

    <!-- Medium editor -->
    <script src="js/angular-medium-editor.min.js"></script>
</head>

<body id="page-top" class="index">
  <%= yield %>
<!-- Scroll to Top Button (Only visible on small and extra-small screen sizes) -->
    <div class="scroll-top page-scroll hidden-sm hidden-xs hidden-lg hidden-md">
        <a class="btn btn-primary" href="#page-top">
            <i class="fa fa-chevron-up"></i>
        </a>
    </div>
  <!-- Footer -->
    
    <footer class="text-center" ng-controller="footerCtrl">
        <div class="footer-above">
            <div class="container">
                <div class="row">
                    <div class="footer-col col-md-4">
                        <h3>Endere√ßo</h3>
                        <div contenteditable="<%=@edit_flag%>"
                          ng-model="site.moldura.footer.endereco"
                          strip-br="true"
                          select-non-editable="true"
                          ng-blur="saveDiv('site.moldura.footer.endereco')">
                        </div>                          
                    </div>
                    <div class="footer-col col-md-4">
                        <h3>Links</h3>
                         <ul class="list-inline">
		                       <li ng-repeat="item in site.moldura.footer.social"  >
                                <a href="{{item.link}}" class="btn-social btn-outline"><i class="fa fa-fw fa-{{item.label}}"></i></a>
                               </li>
                        </ul>
                    </div>
                    <div class="footer-col col-md-4">
                        <h3>Sobre</h3>
                        <div contenteditable="<%=@edit_flag%>"
                          ng-model="site.moldura.footer.about_resumo"
                          strip-br="true"
                          select-non-editable="true"
                          ng-blur="saveDiv('site.moldura.footer.about_resumo')">
                        </div>                                           
                    </div>
                </div>
            </div>
        </div>
        <div class="footer-below ">
          <div class="container">
            <div class="row">
              <div class="col-lg-12">
                {{site.moldura.footer.creditos}}&nbsp; 
                <% if @edit_flag == false %>
                  <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#modalLogin">Admin</button>
                <% else %>
                  <button type="button" 
                    class="btn btn-primary btn-sm" 
                    data-toggle="modal" 
                    onclick="location.href='/<%=@site_nome%>/logout'">Logout
                  </button>
                <% end %> 
              </div>
            </div>
          </div>
        </div>
    </footer>
